<% provide(:title, 'Add anime') %>
<h1>Add anime</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@anime) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :score %>
      <%= f.number_field :score %>

      <%= f.label :progress %>
      <%= f.number_field :progress %>


      <%= f.submit "Add new anime", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
